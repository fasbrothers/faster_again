{{ "style-footer.css" | asset_url | stylesheet_tag }}

<div class="footer">
  <div class="footer__wrapper container">
      {% render  "footer-signup"%}

      {% render  "footer_link"%}
  </div>
  <p class="footer__bottom">
      {{section.settings.footer__bottom}}
  </p>
</div>

{% schema %} 
  { "name": "Footer", 
  "settings": 
  [
    {
       "type": "image_picker",
        "label": "Footer logo",
        "id": "logo__big"
    },
    {
        "type": "text",
        "id": "footer__heading_one",
        "label": "Footer Heading One",
        "default": "Newsletter"
    },
    {
        "type": "url",
        "id": "facebook",
        "label": "Facebook link"
    },
    {
        "type": "url",
        "id": "instagram",
        "label": "Instagram link"
    },
    {
        "type": "url",
        "id": "mail",
        "label": "Mail link"
    },
    {
        "type": "text",
        "id": "footer__input",
        "label": "Footer Input",
        "default": "Enter your email"
    },
    {
        "type": "text",
        "id": "footer__bottom",
        "label": "Footer text",
        "default": "Â©2020 Again Faster. All Rights Reserved"
    }
  ],
  "blocks": [
      {
        "type": "list",
        "name": "Footer list",
        "settings": [
          {
            "type": "link_list",
            "id": "footer_link_list",
            "label": "Footer list"
          }
        ]
      }
    ] 
}
 {% endschema %}