{{ "style-announcement-bar.css" | asset_url | stylesheet_tag }}

<a href="{{section.settings.link }}" class="announcement-bar__link">
  {{- section.settings.message -}}
</a>

{% schema %}
{
  "name": "t:sections.announcement.name",
  "class": "announcement-bar",
  "settings": [
    {
      "type": "text",
      "id": "message",
      "label": "t:sections.announcement.settings.announcement__title",
      "default": "20% OFF Sitewide until 9/12"
    },
    {
      "type": "url",
      "id": "link",
      "label": "t:sections.announcement.settings.announcement__link"
    }
  ],
  "presets": [
    {
      "name": "Announcement",
      "settings": {}
    }
  ]
}
{% endschema %}
