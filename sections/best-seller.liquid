{{ "style-best-seller.css" | asset_url | stylesheet_tag }}

{% include 'best-seller-snip' %}

<style>
    .best-seller__left-img{
        background-color: {{ section.settings.background_left }};
    }
    .best-seller__right-img{
        background-color: {{ section.settings.background_right }};
    }
</style>

{% schema %} 
    { "name": "best-seller",
     "class": "best-seller",
     "settings": 
    [ 
        { 
            "id":"best-seller__image-1",
            "type":"image_picker",
            "label":"Select an image" 
        },
        { 
            "id":"best-seller__image-2",
            "type":"image_picker",
            "label":"Select an image" 
        },
        {
            "type": "color_background",
            "id": "background_left",
            "label": "Background color left image",
            "default": "#e5e5e5"
        },
        {
            "type": "color_background",
            "id": "background_right",
            "label": "Background color right image",
            "default": "#e5e5e5"
        },
        {
            "type": "text",
            "id": "best-seller__subheading",
            "label": "best-seller subheading",
            "default": "Best seller"
        },
        {
            "type": "text",
            "id": "best-seller__heading",
            "label": "best-seller heading",
            "default": "TRULY, AN ALL IN ONE BARBELL"
        },
        {
            "type": "text",
            "id": "best-seller__text",
            "label": "best-seller desctiption",
            "default": "Design that matches the performance and quality of other elite level competition bars"
        },
        {
            "type": "text",
            "id": "best-seller__button",
            "label": "best-seller button name",
            "default": "Shop weights"
        },
        {
            "type": "url",
            "id": "best-seller__button_url",
            "label": "best-seller button url"
        }

    ] 
    }
 {% endschema %}
