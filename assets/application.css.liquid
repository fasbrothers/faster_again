* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}
.container {
  max-width: 1440px;
  width: 100%;
  margin: 0 auto;
}
html {
  font-size: 62.5%;
}
body{
    font-size: 1.4rem;
    font-family: 'Open Sans', sans-serif;
}
h1,
h2 {
  font-weight: 700;
}
h3,
h4 {
  font-weight: 600;
}
h5,
h6 {
  font-weight: 500;
}
p,
span {
  font-weight: 400;
}
.templete-cart .container{
  width: 60%;
  margin: 0 auto;
}
.templete-cart .cart__heading{
  text-align: center;
  margin-bottom: 3rem;
  font-size: 4rem;
  text-transform: uppercase;
}
.templete-cart .cart__buttom{
  text-align: center;
  margin-top: 3rem;
  font-size: 1.4rem;
}
.templete-cart .cart__buttom button{
  border: none;
  background: #000;
  color: white;
  height: 3rem;
  width: 10rem;
  margin-top: 1rem;
}