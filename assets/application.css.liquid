* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}
.container {
  max-width: 1440px;
  width: 100%;
  margin: 0 auto;
}
html {
  font-size: 62.5%;
}
body{
    font-size: 1.4rem;
    font-family: 'Open Sans', sans-serif;
}
h1,
h2 {
  font-weight: 700;
}
h3,
h4 {
  font-weight: 600;
}
h5,
h6 {
  font-weight: 500;
}
p,
span {
  font-weight: 400;
}