* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}
.container {
  max-width: 1440px;
  width: 100%;
  margin: 0 auto;
  padding: 0;
}
html {
  font-size: 62.5%;
}
body{
    font-size: 1.4rem;
    font-family: 'Open Sans', sans-serif;
}
h1,
h2 {
  font-weight: 700;
}
h3,
h4 {
  font-weight: 600;
}
h5,
h6 {
  font-weight: 500;
}
p,
span {
  font-weight: 400;
}
.templete-cart .container{
  width: 60%;
  margin: 0 auto;
}
.templete-cart .cart__heading{
  text-align: center;
  margin-bottom: 3rem;
  font-size: 4rem;
  text-transform: uppercase;
}
.templete-cart .cart__buttom{
  text-align: center;
  margin-top: 3rem;
  font-size: 1.4rem;
}
.templete-cart .cart__buttom button{
  border: none;
  background: #000;
  color: white;
  height: 5rem;
  width: 15rem;
  margin-top: 1rem;
  font-size: 1.7rem;
  font-weight: 500;
  cursor: pointer;
  transition: 0.3s ease;
  border: 1px solid black;
}
.templete-cart .cart__buttom button:hover{
  background: #fff;
  color: #000;
}
.templete-cart .cart__buttom p{
  font-size: 2rem;
  font-weight: 500;
}
#rc_link_container{
  display: none;
}
.table__row img{
  width: 150px;
  height: 200px;
  border-radius: 10px;
  margin: 1rem 0;
}
thead{
  font-size: 2rem;
  text-align: left;
  font-weight: 600;
}
.cart__info{
  display: flex;
  flex-direction: column;
  margin-top: 4rem;
  width: 150px;
}
.cart__info a{
  color: black;
  text-decoration: none;
}
.cart__name{
  font-size: 2rem;
  font-weight: 500;
}
.cart__info p{
  margin: 1rem 0;
}
.cart__remove{
  text-transform: capitalize;
}
.cart__price{
  font-size: 1.7rem;
  font-weight: 500;
}
.cart__quantity{
  width: 50px;
  border: none;
  padding:0.5rem 0 0.5rem 1rem;
}
.cart__quantity:focus{
  outline: none;
}
.cart__image{
  width: 250px;
}
.cart__price--highlight{
  text-decoration: line-through;
  opacity: 0.7;
}
.cart__total{
  text-align: right;
}
.cart__quant{
  width: 117px;
}
.cart__quantityy{
  border: 1px solid #000;
  width: 60px;
}
